<h2>Lista de Categorias:</h2>
<hr>
<a href="/admin/categorias/add"><button class="btn btn-success">Nova Categoria</button></a>

{{#each categorias}}
    <div class="card mt-4">
        <div class="card-body">
            <h4>{{nome}}</h4>
            <small>Slug: {{slug}}</small><br>
            <small>Data de Criação: {{date}}</small><br>

    <div class="container mt-2">
        <div class="row justify-content-md-center">
          <div class="col col-lg-2">
            <a href="/admin/categorias/edit/{{_id}}"><button class="btn btn-info">Editar categoria</button></a>
            </div>
        <div class="col">  
            <form action="/admin/categorias/deletar" method="post">
                <input type="hidden" name="id" value="{{_id}}">
                <button class="btn btn-danger">Deletar categoria</button>
            </form>
        </div>
        </div>
           </div>
        </div>
    </div>
    
{{else}}
    <h4 class="mt-3">Nenhuma categoria cadastrada!</h4>
{{/each}}