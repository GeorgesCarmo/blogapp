<div class="card">
    <div class="card-body">
        <h4>Nova Postagem</h4>
        <form action="/admin/postagens/nova" method="post">

            <label for="titulo">Titulo</label>
            <input type="text" name="titulo" class="form-control mb-2">

            <label for="slug">Slug</label>
            <input type="text" name="slug" class="form-control mb-2">

            <label for="descricao">Descrição</label>
            <input type="text" name="descricao" class="form-control mb-2">

            <label for="conteudo">Conteudo</label>
            <textarea name="conteudo" class="form-control mb-2"></textarea>

            <label for="categoria">Categoria</label>
            <select name="categoria" class="form-select mb-2">
                {{#each categorias}}
                    <option value="{{_id}}">{{nome}}</option>
                {{else}}
                    <option value="0">Nenhuma categoria registrada</option>
                {{/each}}
            </select>

            <button class="btn btn-success mt-4">Criar postagem</button>

        </form>
    </div>
</div>